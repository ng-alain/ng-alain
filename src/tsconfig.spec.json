{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "./",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@shared": [ "app/shared/index" ],
      "@shared/*": [ "app/shared/*" ],
      "@core": [ "app/core/index" ],
      "@core/*": [ "app/core/*" ],
      "@env/*": [ "environments/*" ]
    }
  },
  "files": [ "test.ts", "polyfills.ts" ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}

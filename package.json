{
  "name": "ng-alain",
  "version": "21.0.5",
  "description": "ng-zorro-antd admin panel front-end framework",
  "author": "cipchk <cipchk@qq.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ng-alain/ng-alain.git"
  },
  "bugs": {
    "url": "https://github.com/ng-alain/ng-alain/issues"
  },
  "homepage": "https://ng-alain.com",
  "license": "MIT",
  "keywords": [
    "delon",
    "antd",
    "ng-zorro-antd",
    "angular",
    "component",
    "scaffold"
  ],
  "scripts": {
    "prepare": "husky install",
    "start": "ng s -o",
    "hmr": "ng s -o --hmr",
    "build": "ng b",
    "analyze": "ng b --source-map",
    "analyze:view": "source-map-explorer dist/**/*.js --no-border-checks",
    "lint": "npm run lint:ts && npm run lint:style",
    "lint:ts": "ng lint",
    "lint:style": "npx stylelint 'src/**/*.less'",
    "test": "ng test",
    "test-coverage": "ng test -c coverage --coverage --watch=false",
    "color-less": "ng-alain-plugin-theme -t=colorLess",
    "theme": "ng-alain-plugin-theme -t=themeCss",
    "icon": "ng g ng-alain:plugin icon"
  },
  "dependencies": {
    "@angular/animations": "^21.1.2",
    "@angular/cdk": "^21.1.2",
    "@angular/common": "^21.1.2",
    "@angular/compiler": "^21.1.2",
    "@angular/core": "^21.1.2",
    "@angular/forms": "^21.1.2",
    "@angular/platform-browser": "^21.1.2",
    "@angular/router": "^21.1.2",
    "@delon/abc": "^21.0.5",
    "@delon/acl": "^21.0.5",
    "@delon/auth": "^21.0.5",
    "@delon/cache": "^21.0.5",
    "@delon/chart": "^21.0.5",
    "@delon/form": "^21.0.5",
    "@delon/mock": "^21.0.5",
    "@delon/theme": "^21.0.5",
    "@delon/util": "^21.0.5",
    "@ng-util/monaco-editor": "^21.1.0",
    "ng-zorro-antd": "^21.0.2",
    "ngx-tinymce": "^21.0.0",
    "rxjs": "~7.8.0",
    "screenfull": "^6.0.2",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.2",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^21.1.2",
    "@delon/testing": "^21.0.5",
    "@playwright/test": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@typescript-eslint/utils": "^8.54.0",
    "@vitest/browser-playwright": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.16",
    "angular-eslint": "^21.2.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "~2.32.0",
    "eslint-plugin-jsdoc": "~62.5.0",
    "eslint-plugin-prefer-arrow": "~1.2.3",
    "eslint-plugin-prettier": "~5.5.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "ng-alain": "^21.0.5",
    "ng-alain-plugin-theme": "^18.0.0",
    "prettier": "^3.8.1",
    "prettier-eslint": "^16.4.2",
    "source-map-explorer": "^2.5.3",
    "stylelint": "^17.1.0",
    "stylelint-config-clean-order": "^8.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^3.0.0",
    "stylelint-order": "^7.0.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.54.0",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "(src)/**/*.{html,ts}": [
      "eslint --cache"
    ],
    "(src)/**/*.less": [
      "npm run lint:style"
    ]
  },
  "packageManager": "yarn@4.9.2"
}
